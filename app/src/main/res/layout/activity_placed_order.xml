<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PlacedOrderActivity">

    <TextView
        android:id="@+id/text_yourorder"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Order Has Been Placed"
        android:textAlignment="center"
        android:textColor="@color/main_color"
        android:textSize="23sp"
        android:textStyle="bold"
        android:fontFamily="@font/abhaya_libre_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/order_img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@mipmap/placedorder"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintTop_toBottomOf="@id/text_yourorder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
    <TextView
        android:id="@+id/thankyou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank you for your purchase on our products \n See You Again"
        android:textColor="@color/main_color"
        android:fontFamily="@font/abhaya_libre_bold"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/order_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/home_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:textSize="18sp"
        android:fontFamily="@font/abhaya_libre_bold"
        app:layout_constraintTop_toBottomOf="@id/thankyou"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/main_color"/>


</androidx.constraintlayout.widget.ConstraintLayout>