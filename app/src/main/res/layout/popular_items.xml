<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/popular_img"
            android:layout_width="380dp"
            android:layout_height="180dp"
            app:riv_corner_radius="16dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/offers3"/>
        <TextView
            android:id="@+id/popular_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abhaya_libre"
            android:text="Popular Products"
            android:textSize="25sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/popular_des"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="description"
            android:textSize="20sp"
            android:fontFamily="@font/abhaya_libre"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:src="@mipmap/ratingbar"
                android:layout_marginLeft="-5dp"/>

            <TextView
                android:id="@+id/popular_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="5.0"
                android:layout_weight="1"
                android:textSize="18sp"
                android:fontFamily="@font/abhaya_libre"/>

            <TextView
                android:id="@+id/popular_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Discount 20% Off"
                android:textColor="@color/main_color"
                android:textStyle="bold"
                android:gravity="end"
                android:textSize="20sp"
                android:fontFamily="@font/abhaya_libre_bold"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>